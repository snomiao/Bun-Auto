{
  "name": "bun-auto",
  "version": "1.3.12",
  "description": "Auto Install Packages and types definitions as you code, ZEN-MODE for ts/js coding.",
  "author": "snomiao <snomiao@gmail.com>",
  "exports": {
    "import": "./index.ts",
    "types": "./index.ts"
  },
  "module": "index.ts",
  "types": "./index.ts",
  "bin": {
    "bua": "./cli.ts",
    "bun-auto": "./cli.ts"
  },
  "files": [
    "*.ts",
    "*.json"
  ],
  "scripts": {
    "build": "bun build ./cli.ts --outfile=./bin/cli --target=bun --compile",
    "prerelease": "bun run build && bun run test",
    "release": "bunx commit-and-tag-version && git push --follow-tags && npm publish",
    "test": "bun test"
  },
  "dependencies": {
    "@snomiao/die": "^1.0.9",
    "fast-glob": "^3.3.2",
    "globby": "^14.0.1",
    "ignore": "^5.3.1",
    "p-map": "^7.0.2",
    "peek-log": "^0.0.8",
    "rambda": "^9.2.1",
    "bun": "^1.1.15",
    "snoflow": "^1.3.14",
    "yaml": "^2.4.5",
    "yargs": "^17.7.2"
  },
  "devDependencies": {
    "@types/bun": "^1.1.5",
    "@types/jest": "^29.5.12",
    "@types/yargs": "^17.0.32"
  }
}