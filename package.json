{
  "name": "bun-auto",
  "version": "1.3.9",
  "description": "Auto Install Packages and types definitions as you code, ZEN-MODE for ts/js coding.",
  "author": "snomiao <snomiao@gmail.com>",
  "exports": {
    "import": "./index.ts",
    "types": "./index.ts"
  },
  "module": "index.ts",
  "types": "./index.ts",
  "bin": {
    "bai": "./bin/cli",
    "bun-auto": "./bin/cli"
  },
  "files": [
    "*.ts",
    "*.json"
  ],
  "scripts": {
    "build": "bun build ./cli.ts --outfile=./bin/cli --target=bun --compile",
    "prerelease": "bun run build && bun run test",
    "release": "bunx commit-and-tag-version && git push --follow-tags && npm publish",
    "test": "bun test"
  },
  "dependencies": {
    "ignore": "^5.3.1",
    "rambda": "^9.2.1",
    "snoflow": "^1.2.4",
    "yargs": "^17.7.2"
  },
  "devDependencies": {
    "@types/bun": "^1.1.5",
    "@types/jest": "^29.5.12",
    "@types/lodash-es": "^4.17.12",
    "@types/yargs": "^17.0.32",
    "bun": "^1.1.15",
    "typescript": "^5.5.2"
  }
}
